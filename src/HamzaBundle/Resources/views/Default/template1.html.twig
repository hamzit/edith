{% if users is defined %}
<div class="left-input">
  <form class="well">
        <label>First Name : </label>
        <div class="form-group"><input id="fname" placeholder="Nina" type="text" value="{{ users[0].fname }}"></div>

        <label>Last Name : </label>
        <div class="form-group"><input id="lname" placeholder="Shaw" type="text" value="{{ users[0].lname }}"></div>

        <label>Status : </label>
        <div class="form-group"><input id="status" placeholder="Web Designer" type="text" value="{{ users[0].status }}"></div>

        <label>Adress : </label>
        <div class="form-group"><input id="adress" placeholder="14 avenue ..." type="text" value="{{ users[0].address }}"></div>

        <label>Telephone : </label>
        <div class="form-group"><input id="tel" placeholder="+33 6 75 16 94 23" type="text" value="{{ users[0].tel }}"></div>

        <label>Email : </label>
        <div class="form-group"><input id="email" placeholder="hamza@email.com" type="text" value="{{ users[0].email }}"></div>

        <label>To : </label>
        <div class="form-group"><input id="to" placeholder="To whome who may concern " type="text" value="{{ users[0].towhom }}"></div>

        <label>Destinataire :</label>
        <div class="form-group">   <input id="dear" placeholder="Dear" type="text" value="{{ users[0].dear }}"></div>

        <div class="form-group"><label>Parapgraph 1</label></div>
        <div class="form-group"><textarea class="input-xlarge" id="message1" name="message"rows="2" >{{ users[0].TextOne }}</textarea></div>

        <div class="form-group"><label>Paragraph 2</label></div>
        <div class="form-group"><textarea class="input-xlarge" id="message2" name="message"rows="2" >{{ users[0].TextTwo }}</textarea></div>

        <div class="form-group"><label>Paragraph 3</label></div>
        <div class="form-group"><textarea class="input-xlarge" id="message3" name="message"rows="2" >{{ users[0].TextThree }}</textarea></div>

        <label>Greetings :</label>
        <div class="form-group"> <input id="cordialement" placeholder="Cordialement" type="text" value="{{ users[0].greetings }}"></div>

        <label>Signature :</label>
        <div class="form-group">   <input id="signature" placeholder="Hamza H." type="text" value="{{ users[0].signature }}"></div>



        <div class="form-group">       <a href="{{ path('logout') }}" class="btn btn-info btn-lg">
              <span class="glyphicon glyphicon-log-out"></span> Log out
            </a></div>


</form>


</div>

{% endif %}

<div class="template1" style=" background-image: url('     {{ asset('./img/template1s.png') }}     ')" >
  <div class=top>
  <div class="name">
    <h1>{{ users[0].fname }} {{ users[0].lname }}</h1>

  </div>
  <div class="status">
    <h3>{{ users[0].status }}</h3>
  </div>
    </div>
    <div class="towhom">
      <h3>{{ users[0].towhom }}</h3>
    </div>
  <div class="content">

    <div class="dear">
      <h4>{{ users[0].dear }}</h4>
    </div>
    <div class="paragraph1">
        <h5>{{ users[0].TextOne }}</h5>
    </div>
    <div class="paragraph2">
        <h5>{{ users[0].TextTwo }}</h5>
    </div>
    <div class="paragraph3">
        <h5>{{ users[0].TextThree }}</h5>
    </div>
    <div class="signature">
      <div class="first"><h4>{{ users[0].greetings }}</h4></div>
      <div class="second"><h4>{{ users[0].signature }}</h4></div>
    </div>

  </div>
  <div class="footer">
    <div class = 'tel'>
      <h4> | </h4>
      <h5> {{users[0].tel }}  &nbsp;</h5>
    </div>
    <div class = 'email'>
      <h4> | </h4>
      <h5> {{ users[0].email }} </h5>
      <h4> &nbsp; </h4>
    </div>
    <div class = 'adress'>
      <h4> |  </h4>
      <h5>  {{ users[0].address }} </h5>
      <h4> |  </h4>
    </div>

  </div>
</div>
